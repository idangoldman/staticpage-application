[uwsgi]
socket = {{ socket_path }}
binary-path = /usr/bin/uwsgi
callable = app
chdir = {{ www_path }}
chmod-socket = 664
chown-socket = {{ user }}:{{ group }}
die-on-term = true
gid = {{ user }}
logto = {{ log_path }}
master = true
module = wsgi
plugins = python
processes = 3
thunder-lock = true
uid = {{ user }}
vacuum = true
vhost = true
virtualenv = {{ virtualenv_path }}

